<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvDescCoordinate"
        android:layout_width="@dimen/d0dp"
        android:layout_height="@dimen/d60dp"
        android:gravity="center"
        tools:text="地点描述"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvTimeCoordinate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimeCoordinate"
        android:layout_width="@dimen/d0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="time"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tvDescCoordinate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvDescCoordinate"
        app:layout_constraintTop_toTopOf="@id/tvDescCoordinate" />

</android.support.constraint.ConstraintLayout>