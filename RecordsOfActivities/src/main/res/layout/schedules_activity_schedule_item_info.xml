<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btOk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d60dp"
        android:gravity="center"
        android:text="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvScheduleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_str_title"
        android:textSize="@dimen/s20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!--开始时间-->
    <LinearLayout
        android:id="@+id/llStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvScheduleName">

        <TextView
            android:id="@+id/tvStartTimeName"
            android:layout_width="0dp"
            android:layout_height="@dimen/d50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/schedules_start_time" />

        <TextView
            android:id="@+id/tvScheduleStartTime"
            android:layout_width="0dp"
            android:layout_height="@dimen/d50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingEnd="@dimen/d20dp"
            android:paddingStart="@dimen/d20dp"
            tools:text="@string/common_str_title" />

        <Button
            android:id="@+id/btStartTime"
            android:layout_width="0dp"
            android:layout_height="@dimen/d50dp"
            android:layout_weight="1"
            android:text="开始时间" />
    </LinearLayout>
    <!--结束时间-->
    <LinearLayout
        android:id="@+id/llEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/llStartTime">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/d50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/schedules_end_time" />

        <TextView
            android:id="@+id/tvScheduleEndTime"
            android:layout_width="0dp"
            android:layout_height="@dimen/d50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingEnd="@dimen/d20dp"
            android:paddingStart="@dimen/d20dp"
            tools:text="@string/common_str_title" />

        <Button
            android:id="@+id/btEndTime"
            android:layout_width="0dp"
            android:layout_height="@dimen/d50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/schedules_item_end_time" />
    </LinearLayout>

    <!--添加路程-->
    <LinearLayout
        android:id="@+id/llAddLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/llEndTime">

        <TextView
            android:id="@+id/tvAddLocationTime"
            android:layout_width="0dp"
            android:layout_height="@dimen/d50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/common_str_time" />

        <EditText
            android:id="@+id/tvLocationName"
            android:layout_width="0dp"
            android:layout_height="@dimen/d50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingEnd="@dimen/d20dp"
            android:paddingStart="@dimen/d20dp"
            tools:text="@string/common_str_title" />

        <Button
            android:id="@+id/btAddLocation"
            android:layout_width="0dp"
            android:layout_height="@dimen/d50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@android:string/ok" />
    </LinearLayout>

    <!--路程-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvLocations"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/llAddLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

