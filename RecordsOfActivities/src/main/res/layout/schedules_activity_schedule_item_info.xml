    <!--备注-->
    <TextView
        android:id="@+id/tvScheduleNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_str_note"
        app:layout_constraintTop_toBottomOf="@id/rvLocations" />
    <!--备注内容-->
    <EditText
        android:id="@+id/etScheduleNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/schedules_et_note_hint"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvScheduleNote" />
    <!--类别-->
    <TextView
        android:id="@+id/tvItemClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d40dp"
        android:text="@string/common_str_category"
        app:layout_constraintTop_toBottomOf="@id/etScheduleNote" />
    <!--显示的类别内容-->
    <TextView
        android:id="@+id/tvItemClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d40dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/tvItemClass"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etScheduleNote"
        tools:text="书" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvItemClass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/btOk"
        app:layout_constraintTop_toBottomOf="@id/tvItemClassName" />
