<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trade.info.TradeRecordInfoActivity">
    <com.wk.projects.common.ui.WkCommonActionBar
        android:id="@+id/abTradeInfoTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvTradeInfoPay"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d40dp"
        android:gravity="center"
        android:text="@string/cashbook_zh_pay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/abTradeInfoTitle"/>
    <TextView
        android:id="@+id/tvTradeInfoIncome"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/cashbook_zh_income"
        app:layout_constraintStart_toEndOf="@id/tvTradeInfoPay"
        app:layout_constraintTop_toTopOf="@id/tvTradeInfoPay"
        app:layout_constraintBottom_toBottomOf="@id/tvTradeInfoPay"/>
    <TextView
        android:id="@+id/tvTradeInfoInternalTransfer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/cashbook_internal_transfer"
        app:layout_constraintStart_toEndOf="@id/tvTradeInfoIncome"
        app:layout_constraintTop_toTopOf="@id/tvTradeInfoPay"
        app:layout_constraintBottom_toBottomOf="@id/tvTradeInfoPay"/>

    <TextView
        android:id="@+id/tvTradeInfoAccount"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/cashbook_no_select_account"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTradeInfoPay"
        app:layout_constraintBottom_toBottomOf="@id/tvTradeInfoPay"/>
    <EditText
        android:id="@+id/tvTradeInfoAmount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d60dp"
        app:layout_constraintTop_toBottomOf="@id/tvTradeInfoPay"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="0.00"/>

    <TextView
        android:id="@+id/tvTradeInfoFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        app:layout_constraintTop_toTopOf="@id/tvTradeInfoAmount"
        app:layout_constraintBottom_toBottomOf="@id/tvTradeInfoAmount"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvTradeInfoTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTradeInfoAmount"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTradeInfoCategory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d200dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvTradeInfoTime"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/d200dp"
        android:gravity="start|top"
        android:hint="@string/common_str_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvTradeInfoCategory"/>


</androidx.constraintlayout.widget.ConstraintLayout>