<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchedulesMainActivity">
    <TextView
        android:id="@+id/tvDaySelected"
        android:layout_width="match_parent"
        tools:text="当前日期"
        android:gravity="center"
        android:layout_height="@dimen/d50dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tvDaySelected"
        app:layout_constraintRight_toLeftOf="@id/tvQueryAllData"
        android:id="@+id/addNewScheduleItem"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="@dimen/d60dp"
        android:text="增加活动"
        android:gravity="center"
        android:textSize="@dimen/s24sp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tvDaySelected"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tvQueryAllData"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/addNewScheduleItem"
        android:layout_height="@dimen/d60dp"
        android:text="所有数据"
        android:gravity="center"
        android:textSize="@dimen/s24sp"/>

    <android.support.v7.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/addNewScheduleItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/rvSchedules"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:context=".SchedulesMainActivity" />

</android.support.constraint.ConstraintLayout>