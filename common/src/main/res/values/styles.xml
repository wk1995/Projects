<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="common_base_simple_dialog" />

    <style name="common_base_simple_dialog.button">
        <item name="android:layout_width">@dimen/d100dp</item>
        <item name="android:layout_height">@dimen/d32dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/s16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">@dimen/d10dp</item>
        <item name="android:layout_marginTop">@dimen/d10dp</item>
    </style>

    <style name="common_base_simple_dialog.layout" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!--Dialog的windowFrame框为无-->
        <item name="android:windowIsFloating">true</item><!-- 是否漂现在activity上-->
        <item name="android:windowIsTranslucent">true</item><!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item><!-- dim:模糊的 阴影效果 -->
    </style>
</resources>